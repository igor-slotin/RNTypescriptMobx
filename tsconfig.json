{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "noEmit": false, // change back to true before release
    "noImplicitAny": true,
    "target": "es6",
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "storybook",
    "android",
    "ios"
  ],
  "compileOnSave": true
}
